<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:layout_marginTop="37dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/account_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginRight="58dp"
        android:layout_marginEnd="58dp"
        android:layout_below="@+id/modify"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/oldpas_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/account_modify"
        android:layout_alignRight="@+id/account_modify"
        android:layout_below="@+id/account_modify"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/newpas_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/oldpas_modify"
        android:layout_alignRight="@+id/oldpas_modify"
        android:layout_below="@+id/oldpas_modify"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:layout_alignBaseline="@+id/account_modify"
        android:layout_alignBottom="@+id/account_modify"
        android:layout_toLeftOf="@+id/account_modify"
        android:layout_toStartOf="@+id/account_modify" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Old Password"
        android:layout_alignBaseline="@+id/oldpas_modify"
        android:layout_alignBottom="@+id/oldpas_modify"
        android:layout_toLeftOf="@+id/oldpas_modify"
        android:layout_toStartOf="@+id/oldpas_modify" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:layout_alignBaseline="@+id/newpas_modify"
        android:layout_alignBottom="@+id/newpas_modify"
        android:layout_toLeftOf="@+id/newpas_modify"
        android:layout_toStartOf="@+id/newpas_modify" />

    <Button
        android:id="@+id/modify_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="确定"
        android:layout_below="@+id/newpas_modify"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <Button
        android:id="@+id/modify_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/modify_yes"
        android:layout_alignBottom="@+id/modify_yes"
        android:layout_toEndOf="@+id/modify"
        android:layout_toRightOf="@+id/modify"
        android:text="取消" />

</RelativeLayout>